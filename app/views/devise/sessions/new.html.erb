  <link rel="stylesheet" href="../../../assets/stylesheets/centerinput.css">

  <div class="col-sm-4">

   <i class="fa fa-user fa-3x"></i>
   <br><br>


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 
 

  <div class="field">
    <br />
    <%= f.email_field :email, autofocus: true, value: 'Email', class: 'form-control centerinput' %>
  </div>



  <div class="field">
    <br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control centerinput'  %>
  </div>




  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    






  <% end -%>
<br>
  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


</div>