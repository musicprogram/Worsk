<link rel="stylesheet" href="../../assets/stylesheets/shows.css">

<p id="notice "><%= notice %></p>

<h1 id="letracentro">Listing Boards</h1>

<% if current_user == User.find(1) %>

<h3> Total:  <%=@boards.count %></h3>


<%end%>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Timedate</th>
      <th>End Time</th>
      <th>Activity</th>
      <th>Brand</th>
      <th>Country</th>
      <th>Campaign</th>
      
      <th>Total Time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
   
    <% @boards.each do |board| %>
      <tr>
        
        <% if current_user == User.find(1) %>
        
         <td><%= board.timedate %></td>
        <td><%= board.endtime %></td>
        <td><%= board.activity.activityName %></td>
        <td><%= board.brand.brandName %></td>
        <td><%= board.country.countryName %></td>
        <td><%= board.campaign.campaignName %></td>
        
        
        <% if board.sumtime == nil %>
        <td class="error"><b>ERROR DATE</b></td>
        <% elsif%>
        <td><%= board.sumtime %> Minutes</td>
        <% end%>
        <td><%= board.user.email %></td>
        <td><%= link_to "<i class='fa fa-thumbs-up'></i>".html_safe, board %></td>  
        <td><%= link_to "<i class='fa fa-wrench'></i>".html_safe, edit_board_path(board) %></td>
        <td><%= link_to "<i class='fa fa-trash-o'></i>".html_safe, board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
      <%elsif%>
      
      
      
        <% if current_user == board.user %>
        <td><%= board.timedate %></td>
        <td><%= board.endtime %></td>
        <td><%= board.activity.activityName %></td>
        <td><%= board.brand.brandName %></td>
        <td><%= board.country.countryName %></td>
        <td><%= board.campaign.campaignName %></td>
        
        
        <% if board.sumtime == nil %>
        <td class="error"><b>ERROR DATE</b></td>
        <% elsif%>
        <td><%= board.sumtime %> Minutes</td>
        <% end%>
        <td><%= board.user.email %></td>
        <td><%= link_to "<i class='fa fa-thumbs-up'></i>".html_safe, board %></td>  
        <td><%= link_to "<i class='fa fa-wrench'></i>".html_safe, edit_board_path(board) %></td>
        <td><%= link_to "<i class='fa fa-trash-o'></i>".html_safe, board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
      <% end %>
    <% end %>
  </tbody>
  <hr id="coloreando">
  <br>
  
</table>

<br>
<br>
<br>
<br>
