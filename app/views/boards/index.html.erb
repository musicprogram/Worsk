<p id="notice"><%= notice %></p>

<h1>Listing Boards</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Activity</th>
      <th>Brand</th>
      <th>Country</th>
      <th>Employee</th>
      <th>Campaign</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.activity.activityName %></td>
        <td><%= board.brand.brandName %></td>
        <td><%= board.country.countryName %></td>
        <td><%= board.employee.employeeName %></td>
        <td><%= board.campaign.campaignName %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

